{
  "name": "Haskell",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "haskell.manageHLS": "GHCup"
      },
      "extensions": [
        "haskell.haskell"
      ]
    }
  },
  "remoteUser": "vscode",
  "mounts": [
    "source=${env:HOME}${env:USERPROFILE}/.aws,target=/root/.aws,type=bind"
  ]
}